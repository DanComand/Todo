
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- load MUI -->
<link href="//cdn.muicss.com/mui-0.1.13/css/mui.css" rel="stylesheet" type="text/css" />
<script src="//cdn.muicss.com/mui-0.1.13/js/mui.min.js"></script>

  </head>

 <body>
  <div class="mui-appbar">
    <table width="100%">
    <tr style="vertical-align:middle;">
      <td class="mui-appbar-height">Left Side</td>
      <td class="mui-appbar-height" align="right">    
      <p class="userinfo">
      <% if current_user %>
        Signed in as <%= current_user.email %> <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </p></td>
    </tr>
    </table>
  </div>
    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>

  <%= yield %>

  </body>
    <div class="mui-container">
      <div class="mui-panel">
        <h1>My Title</h1>
        <button class="mui-btn mui-btn-primary mui-btn-raised">My Button</button>
      </div>
    </div>
  </body>
</html>

